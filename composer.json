{
  "name": "magiclegacy/mtgmelee-client",
  "description": "Component to retrieve data from MtgMelee.com",
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgMelee\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgMelee\\Tests\\": "tests/"
    }
  },

  "require": {
    "php": "8.1.*||8.2.*",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-dom": "*",

    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1||^2.0||^3.0",

    "eureka/component-curl": "^2.2",
    "eureka/component-serializer": "^2.0"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "dg/bypass-finals": "^1.4",
    "nyholm/psr7": "^1.8",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpcov": "^9.0",
    "phpunit/phpunit": "^10.2",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
