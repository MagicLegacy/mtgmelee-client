{
  "name": "magiclegacy/mtgmelee-client",
  "description": "Component to retrieve data from MtgMelee.com",
  "type": "library",
  "license": "MIT",
  "prefer-stable": true,

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }
  ],

  "autoload": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgMelee\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MagicLegacy\\Component\\MtgMelee\\Tests\\": "tests/"
    }
  },

  "require": {
    "php": "7.4.*||8.0.*||8.1.*||8.2.*",
    "ext-curl": "*",
    "ext-json": "*",

    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1",

    "eureka/component-curl": "^2.2"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "dg/bypass-finals": "^1.1",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
